{
    "name": "oteltest/php-fpm-otel-poc",
    "description": "PHP Symfony 5.4 + OpenTelemetry POC",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "ext-opentelemetry": "*",
        "symfony/framework-bundle": "5.4.*",
        "symfony/runtime": "5.4.*",
        "symfony/yaml": "5.4.*",
        "symfony/routing": "5.4.*",
        "symfony/config": "5.4.*",
        "doctrine/annotations": "^1.13|^2.0",
        "open-telemetry/sdk": "^1.0",
        "open-telemetry/exporter-otlp": "*",
        "open-telemetry/opentelemetry-auto-symfony": "*",
        "php-http/guzzle7-adapter": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/runtime": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "auto-scripts": {},
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.4.*"
        }
    }
}
